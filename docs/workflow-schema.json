{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Q CLI Workflow Definition",
  "description": "Schema for defining workflows in Q CLI",
  "type": "object",
  "required": ["name", "version", "steps"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique workflow name",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string",
      "description": "Semantic version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Human-readable workflow description"
    },
    "triggers": {
      "type": "array",
      "description": "Workflow triggers",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "const": "manual"
              },
              "description": {
                "type": "string"
              }
            }
          },
          {
            "type": "object",
            "required": ["type", "cron"],
            "properties": {
              "type": {
                "const": "schedule"
              },
              "cron": {
                "type": "string",
                "description": "Cron expression"
              },
              "timezone": {
                "type": "string",
                "default": "UTC"
              }
            }
          }
        ]
      }
    },
    "context": {
      "type": "object",
      "description": "Workflow-wide context",
      "properties": {
        "readonly": {
          "type": "object",
          "description": "Read-only context available to all steps"
        },
        "mutable": {
          "type": "object",
          "description": "Mutable shared state (use with caution)"
        }
      }
    },
    "steps": {
      "type": "array",
      "description": "Workflow steps",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/step"
      }
    },
    "error_handling": {
      "type": "object",
      "description": "Error handling configuration",
      "properties": {
        "default": {
          "type": "string",
          "enum": ["retry", "rollback", "skip", "halt", "custom"],
          "default": "halt"
        },
        "per_step": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/error_strategy"
          }
        },
        "rollback": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "steps": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "resource_limits": {
      "type": "object",
      "description": "Resource constraints for workflow execution",
      "properties": {
        "max_memory_mb": {
          "type": "integer",
          "minimum": 1,
          "default": 512
        },
        "max_cpu_percent": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 50
        },
        "max_execution_time": {
          "type": "integer",
          "description": "Maximum execution time in seconds",
          "minimum": 1,
          "default": 3600
        },
        "max_concurrent_steps": {
          "type": "integer",
          "minimum": 1,
          "default": 5
        }
      }
    }
  },
  "definitions": {
    "step": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique step identifier",
          "pattern": "^[a-z0-9-]+$"
        },
        "type": {
          "type": "string",
          "enum": ["skill", "agent", "parallel", "conditional", "loop"]
        }
      },
      "oneOf": [
        {
          "$ref": "#/definitions/skill_step"
        },
        {
          "$ref": "#/definitions/agent_step"
        },
        {
          "$ref": "#/definitions/parallel_step"
        },
        {
          "$ref": "#/definitions/conditional_step"
        },
        {
          "$ref": "#/definitions/loop_step"
        }
      ]
    },
    "skill_step": {
      "type": "object",
      "required": ["type", "skill"],
      "properties": {
        "type": {
          "const": "skill"
        },
        "skill": {
          "type": "string",
          "description": "Name of the skill to execute"
        },
        "inputs": {
          "type": "object",
          "description": "Input parameters for the skill"
        },
        "outputs": {
          "type": "array",
          "description": "Output variable names",
          "items": {
            "type": "string"
          }
        },
        "async": {
          "type": "boolean",
          "description": "Execute asynchronously (fire-and-forget)",
          "default": false
        },
        "timeout": {
          "type": "integer",
          "description": "Step timeout in seconds",
          "minimum": 1
        }
      }
    },
    "agent_step": {
      "type": "object",
      "required": ["type", "agent"],
      "properties": {
        "type": {
          "const": "agent"
        },
        "agent": {
          "type": "string",
          "description": "Name of the agent to invoke"
        },
        "inputs": {
          "type": "object",
          "description": "Input context for the agent"
        },
        "outputs": {
          "type": "array",
          "description": "Output variable names",
          "items": {
            "type": "string"
          }
        },
        "async": {
          "type": "boolean",
          "description": "Execute asynchronously in background",
          "default": true
        },
        "guardrails": {
          "type": "object",
          "description": "Constraints to keep agent on track",
          "properties": {
            "max_iterations": {
              "type": "integer",
              "minimum": 1
            },
            "allowed_tools": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "max_execution_time": {
              "type": "integer",
              "description": "Maximum execution time in seconds"
            }
          }
        }
      }
    },
    "parallel_step": {
      "type": "object",
      "required": ["type", "steps"],
      "properties": {
        "type": {
          "const": "parallel"
        },
        "steps": {
          "type": "array",
          "description": "Steps to execute in parallel",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "wait_for": {
          "type": "string",
          "enum": ["all", "any", "none"],
          "description": "Wait strategy for parallel steps",
          "default": "all"
        }
      }
    },
    "conditional_step": {
      "type": "object",
      "required": ["type", "condition", "then"],
      "properties": {
        "type": {
          "const": "conditional"
        },
        "condition": {
          "type": "string",
          "description": "Boolean expression to evaluate"
        },
        "then": {
          "type": "array",
          "description": "Steps to execute if condition is true",
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "else": {
          "type": "array",
          "description": "Steps to execute if condition is false",
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      }
    },
    "loop_step": {
      "type": "object",
      "required": ["type", "condition", "steps"],
      "properties": {
        "type": {
          "const": "loop"
        },
        "condition": {
          "type": "string",
          "description": "Boolean expression to continue loop"
        },
        "steps": {
          "type": "array",
          "description": "Steps to execute in each iteration",
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "max_iterations": {
          "type": "integer",
          "description": "Maximum number of iterations",
          "minimum": 1,
          "default": 100
        }
      }
    },
    "error_strategy": {
      "type": "object",
      "required": ["strategy"],
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["retry", "rollback", "skip", "halt", "custom"]
        },
        "max_attempts": {
          "type": "integer",
          "description": "Maximum retry attempts (for retry strategy)",
          "minimum": 1,
          "default": 3
        },
        "backoff": {
          "type": "string",
          "enum": ["linear", "exponential", "fixed"],
          "description": "Backoff strategy for retries",
          "default": "exponential"
        },
        "continue_on_error": {
          "type": "boolean",
          "description": "Continue workflow on error (for skip strategy)",
          "default": true
        },
        "custom_handler": {
          "type": "string",
          "description": "Custom error handler step ID"
        }
      }
    }
  }
}
